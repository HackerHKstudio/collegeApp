<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>College Web App</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link href="assets/img/logo.png" rel="icon">

  <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,700,700i&display=swap" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="assets/vendor/animate.css/animate.min.css" rel="stylesheet">
  <link href="assets/vendor/aos/aos.css" rel="stylesheet">
  <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="assets/css/style.css" rel="stylesheet">
  <link href="assets/css/canteen.css" rel="stylesheet">

</head>

<body>

    <!-- header -->
<%- include('../partials/header') -%>



  <main id="main">
    <section class="menus-area" style="background-image: url('img/back.jpg');">
      <div class="container">
          <div class="section-title">

            <% canteen3.forEach(list => { %>
              <%  if(list.pass === "canteen3"){   %>
                <h4><%= list.canteen3Name %></h4>
                <p><%= list.des %></p><br>
               <div class="message-container">
                 <div id="message-box" class="message-box"><%= list.status %></div>
               </div>
             <%   }       %>
               <% });   %>

          </div>
          <div class="menus">
              <div class="menu-items">
                  <div class="title">breakfast <br> <small style="font-size: 15px;" >time: 7am-10am</small></div>
                 <% canteen3.forEach(list => { %>
                <%  if(list.morning === true){   %>
                  <div class="single-menu">
                    <span><%=list.price%></span>
                    <img src="https://images.unsplash.com/photo-1546069901-ba9599a7e63c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxleHBsb3JlLWZlZWR8Mnx8fGVufDB8fHx8&w=1000&q=80" alt="">
                    <h4><%=list.foodtitle%></h4>
                    <p><%=list.description%></p>
                </div>
               <%   }       %>
                 <% });   %>

              </div>

              <div class="menu-items">
                  <div class="title">lunch <br> <small style="font-size: 15px;" >time: 11am-4pm</small></div>

                  <% canteen3.forEach(list => { %>
                    <%  if(list.morning === false){   %>
                      <div class="single-menu">
                        <span><%=list.price%></span>
                        <img src="https://images.unsplash.com/photo-1546069901-ba9599a7e63c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxleHBsb3JlLWZlZWR8Mnx8fGVufDB8fHx8&w=1000&q=80" alt="">
                        <h4><%=list.foodtitle%></h4>
                        <p><%=list.description%></p>
                    </div>
                   <%   }       %>
                     <% });   %>

              </div>

              <div class="menu-items">
                  <div class="title">dinner <br> <small style="font-size: 15px; background: red; padding: 5px;" >Not Available</small></div>
              </div>
          </div>
      </div>
  </section>
    

  </main><!-- End #main -->

<!-- footer -->
<%- include('../partials/footer') -%>

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="assets/vendor/purecounter/purecounter_vanilla.js"></script>
  <script src="assets/vendor/aos/aos.js"></script>
  <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="assets/vendor/waypoints/noframework.waypoints.js"></script>
  <script src="assets/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <script src="assets/js/main.js"></script>
  <script src="assets/js/canteen.js"></script>


</body>

</html>